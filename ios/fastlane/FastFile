default_platform(:ios)

platform :ios do
  desc "Build IPA for manual upload"
  lane :build_ipa do
    match(type: "appstore")  # Ensure provisioning profiles are set up

    gym(
      project: "./ios/rnunitynative.xcodeproj",  # Path to the Xcode project
      scheme: "rnunitynative",  # Scheme name
      configuration: "Release",
      export_method: "app-store",  # Required for distribution builds
      output_directory: "./build/ios/ipa"  # Saves the IPA in a known location
    )
  end
end
